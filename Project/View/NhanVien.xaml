<UserControl x:Class="QuanLyNhaHang.View.NhanVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:QuanLyNhaHang.View" 
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="1060">
    <Grid Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Button Name="btnAddStaff"
                        Grid.Column="0"
                        Command="{Binding AddCM}"
                        Background="#1C3879"
                        Margin="10 5 5 10"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Comfortaa Light"
                        BorderThickness="0"
                        Cursor="Hand"
                        Content="Thêm">
                </Button>

                <Button Name="btnEditStaff"
                        Grid.Column="1"
                        Command="{Binding EditCM}"
                        Background="#1C3879"
                        Margin="5 5 5 10"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Comfortaa Light"
                        BorderThickness="0"
                        Cursor="Hand"
                        Content="Sửa">
                </Button>


                <Button Name="btnDeleteStaff"
                        Grid.Column="2"
                        Command="{Binding DeleteCM}"
                        Background="#1C3879"
                        Margin="5 5 5 10"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Comfortaa Light"
                        BorderThickness="0"
                        Cursor="Hand"
                        Content="Xóa">
                </Button>


                <Button Name="btnCheckStaff"
                        Grid.Column="3"
                        Command="{Binding CheckCM}"
                        Background="#1C3879"
                        Margin="5 5 10 10"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Comfortaa Light"
                        BorderThickness="0"
                        Cursor="Hand"
                        Content="Chấm công">
                </Button>

                <Grid Grid.Column="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>


                    <TextBox Name="txtSearch"
                         Grid.Column="0"
                         FontFamily="Comfortaa"
                         FontSize="16"
                         Foreground="#1C3879"
                         Margin="100 42 10 32"
                         materialDesign:HintAssist.Hint="Tìm kiếm">
                        <TextBox.Text>
                            <Binding Path="Tìm kiếm"
                                 UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <ComboBox materialDesign:HintAssist.Hint="Tìm theo"
                              Grid.Column="1"
                              IsEditable="True"
                              Margin="0 35 10 30"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBoxItem IsSelected="True">
                            Họ tên
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Chức vụ
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Giới tính
                        </ComboBoxItem>
                    </ComboBox>
                </Grid>

            </Grid>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Grid.Row="1">
                <ListView ItemsSource="{Binding ListStaff}"
                          FontFamily="Comfortaa"
                          FontSize="18">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Name}"
                                        Width="auto"
                                        Header="Họ tên" />
                            <GridViewColumn DisplayMemberBinding="{Binding Position}"
                                        Width="auto"
                                        Header="Chức vụ" />
                            <GridViewColumn DisplayMemberBinding="{Binding Gender}"
                                        Width="auto"
                                        Header="Giới tính" />
                            <GridViewColumn DisplayMemberBinding="{Binding Phone}"
                                        Width="auto"
                                        Header="SĐT" />
                            <GridViewColumn DisplayMemberBinding="{Binding Address}"
                                        Width="auto"
                                        Header="Địa chỉ" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
